<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mg.charge">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:name="mg.charge.MGChargeApplication"
        android:allowBackup="false"
        android:icon="@drawable/mg1"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/Theme.MGCharge"
        >
        <activity
            android:name=".MGChargeActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="true"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DeviceActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Devices +++"
            android:parentActivityName=".MGChargeActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustPan"
            />

        <service
            android:name="mg.charge.SupervisionService"
            android:exported="false"
            android:foregroundServiceType="connectedDevice" />


    </application>

</manifest>